%html{"lang" => "en", "ng-app" => "mtgApp"}
  %head
    %meta{"charset" => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", "content" => "IE=edge"}
    %meta{"name" => "viewport", "content" => "width=device-width, initial-scale=1"}
    %title MtgCardBrowser
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    %nav.top-bar{"data-topbar" => true}
      %ul.title-area
        %li.name
          %h1
            %a.navbar-brand{"href" => "/"} MTG Card Browser
      %section.top-bar-section
        %ul.right
          %li
            = link_to "Sets", "/sets"
        -# %ul.left
        -#   %li.form
        -#   %input.form-control{:name => "q", :placeholder => "Search...", :value => "#{@query}"}/
    %div{"ui-view" => true}
    %noscript
      = yield
    .footer
      .copyright
        %p
          The information presented on this site about Magic: The Gathering,
          both literal and graphical, is copyrighted by Wizards of the Coast.
        %p
          This website is not produced, endorsed, supported, or affiliated with
          Wizards of the Coast.
